  android:id="@+id/mobile_navigation"
  app:startDestination="@+id/navigation_play">

  <fragment
    android:id="@+id/navigation_play"
    android:label="@string/title_home"
    android:name="edu.cnm.deepdive.codebreaker.controller.GameFragment"
