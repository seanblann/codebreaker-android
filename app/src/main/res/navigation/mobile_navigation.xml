  <fragment
    android:id="@+id/navigation_summary"
    android:label="@string/title_summary"
    android:name="edu.cnm.deepdive.codebreaker.controller.SummaryFragment"
    tools:layout="@layout/fragment_summary"/>

  <fragment
    android:id="@+id/navigation_notifications"
    android:label="@string/title_scores"
    android:name="edu.cnm.deepdive.codebreaker.controller.ui.notifications.NotificationsFragment"
